<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="festbar.starpro.com.festbar.activity.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/id_toolbar_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/id_logo"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_alignBottom="@+id/id_toolbar_principal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="false"
        android:src="@drawable/festbar_logo"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@+id/botao_pesquisar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id_toolbar_principal"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/colorPrimary"
        app:srcCompat="@drawable/icone_pesquisar"
        tools:ignore="ContentDescription" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/id_toolbar_principal"
        android:orientation="vertical"
        tools:context="nav.bottom.MainActivity">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- This is the Bottom Bavigation Bar -->
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            app:menu="@menu/my_navigation_items"
            app:itemBackground="@color/colorPrimaryLight"
            app:itemIconTint="@animator/background"
            app:itemTextColor="@animator/background"/>

    </LinearLayout>

</RelativeLayout>

